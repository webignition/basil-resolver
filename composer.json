{
    "name": "webignition/basil-resolver",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-resolver",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilResolver\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilResolver\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php",
            "./vendor/bin/phpcs"
        ],
        "cs-fix": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php --fix"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "webignition/basil-model-provider": ">=0.8,<1",
        "webignition/basil-models": ">=0.53,<1",
        "webignition/php-basil-context-aware-exception": ">=0.3,<1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.77",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symplify/easy-coding-standard": "^9.1",
        "webignition/basil-parser": ">=0.25,<1"
    },
    "config": {
        "sort-packages": true
    }
}
